<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkh.printe.Inprogress">



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/jobID"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="JOB ID" />

            <TextView
                android:id="@+id/jobID_value"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/document_name"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Document Name" />

            <TextView
                android:id="@+id/document_name_value"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/printer_location"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Printer Location" />

            <TextView
                android:id="@+id/printer_location_value"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/Owner_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="Owner" />


            <TextView
                android:id="@+id/Owner_name_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/Owner_contact"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="Contact" />


            <TextView
                android:id="@+id/Owner_contact_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/copies"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="No. of copies" />


            <TextView
                android:id="@+id/copies_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/color"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="Coloured" />


            <TextView
                android:id="@+id/color_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/double_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="Double-sided" />


            <TextView
                android:id="@+id/double_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <TextView
                android:id="@+id/port1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="Portrait" />


            <TextView
                android:id="@+id/port1_value"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:text="" />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeee"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="47dp"
        android:text="CANCEL" />

    <TextView
        android:id="@+id/timeee"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="14dp"
        android:text=""
        android:textAlignment="center" />

    <Button
        android:id="@+id/view_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/cancel"
        android:layout_alignBottom="@+id/cancel"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/cancel"
        android:onClick="show_doc"
        android:text="View document" />


</RelativeLayout>
